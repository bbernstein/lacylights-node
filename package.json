{
  "name": "lacylights-node",
  "version": "1.1.1",
  "description": "Stage Lighting Control System - Node.js Server",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:interactive": "tsx src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "stop": "pkill -f 'node dist/index.js' || echo 'Server not running'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --forceExit --collectCoverageFrom='src/**/*.{ts,tsx}' --collectCoverageFrom='!src/**/*.d.ts' --collectCoverageFrom='!src/**/__tests__/**' --collectCoverageFrom='!src/**/__mocks__/**'",
    "test:coverage:summary": "jest --coverage --coverageReporters=text-summary --forceExit --silent",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "check": "npm run lint && npm run build",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "debug:fade-spikes": "tsx scripts/debug-fade-spikes.ts",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:build": "docker compose build",
    "docker:restart": "docker compose restart",
    "docker:clean": "docker compose down -v --remove-orphans",
    "docker:db": "docker compose up -d postgres",
    "docker:dev": "docker compose up -d postgres redis && npm run dev",
    "seed:ofl": "tsx scripts/import-ofl-fixtures.ts",
    "check:fixtures": "tsx scripts/check-and-import-fixtures.ts",
    "create:slimpar": "tsx scripts/create-slimpar-fixtures.ts",
    "create:scenes": "tsx scripts/create-lighting-scenes.ts",
    "preview:scenes": "tsx scripts/preview-scenes.ts",
    "test:artnet": "tsx scripts/test-artnet.ts",
    "test:fade": "tsx scripts/test-fade-engine.ts",
    "test:e2e-fade": "tsx scripts/test-e2e-fade.ts",
    "test:performance": "tsx scripts/test-performance-dmx.ts",
    "introspect:schema": "tsx scripts/introspect-schema.ts",
    "export:qlc": "tsx scripts/test-qlc-export.ts",
    "mapping:qlc": "tsx scripts/test-qlc-mapping.ts",
    "mapping:enhanced": "tsx scripts/test-enhanced-mapping.ts",
    "analyze:qlc": "tsx scripts/analyze-qlc-fixtures.ts",
    "deploy:pi": "bash scripts/deploy-to-pi.sh",
    "prepare": "husky || true"
  },
  "keywords": [
    "lighting",
    "dmx",
    "stage",
    "control"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@apollo/server": "^4.9.5",
    "@graphql-tools/schema": "^10.0.25",
    "@prisma/client": "^5.6.0",
    "@types/xml2js": "^0.4.14",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "graphql-subscriptions": "^2.0.0",
    "graphql-tag": "^2.12.6",
    "graphql-ws": "^5.14.2",
    "unzipper": "^0.12.3",
    "ws": "^8.14.2",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.7",
    "@types/mock-fs": "^4.13.4",
    "@types/node": "^20.17.57",
    "@types/unzipper": "^0.10.11",
    "@types/ws": "^8.5.8",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-mock-extended": "^4.0.0",
    "lint-staged": "^16.1.2",
    "mock-fs": "^5.5.0",
    "prisma": "^5.6.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.1.4",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix"
    ]
  }
}
