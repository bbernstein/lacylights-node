# Database (SQLite)
# For development (local file at project root)
DATABASE_URL="file:./dev.db"
# For production on Raspberry Pi
# DATABASE_URL="file:/var/lib/lacylights/db.sqlite"

# Server Configuration
PORT=4000
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# DMX Configuration
DMX_UNIVERSE_COUNT=4
DMX_REFRESH_RATE=44

# Art-Net Configuration
# ARTNET_ENABLED=true                    # Set to false to disable Art-Net output
# ARTNET_BROADCAST=192.168.1.255         # Art-Net broadcast address (optional)
                                          # If not set, will prompt for interface selection
                                          # Options:
                                          #   - Specific IP: 192.168.1.100 (unicast to device)
                                          #   - Subnet broadcast: 192.168.1.255
                                          #   - Global broadcast: 255.255.255.255
                                          #   - Localhost: 127.0.0.1 (testing only)
# NON_INTERACTIVE=false                   # Set to true to skip interface selection prompt

# Session Configuration
SESSION_SECRET=your-session-secret-here

# Fixture Library Configuration
# FIXTURE_SOURCE=auto                      # Fixture data source: auto | github | ofl
                                          # - auto: Try GitHub first, fall back to OFL (default)
                                          # - github: Use GitHub repository directly
                                          # - ofl: Use open-fixture-library.org website
# FIXTURE_FALLBACK_ENABLED=true            # Enable fallback to alternative source on failure
# SKIP_FIXTURE_IMPORT=false                # Skip fixture import entirely (for CI/testing)
